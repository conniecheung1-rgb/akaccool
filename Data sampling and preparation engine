import pandas as pd
import os

file_name = '/boot/06_02_healthcare_dataset.csv'

# Load your healthcare dataset
df = pd.read_csv(file_name)

# Randomly sample 100 rows
# Ensure that n does not exceed the number of rows in the dataframe
sample_n = min(100, len(df))
sampled_df = df.sample(n=sample_n, random_state=42)  # random_state ensures reproducibility

# Display the sampled rows
print("Sampled DataFrame:")
print(sampled_df)

# Optionally, save the sampled data to a new CSV
output_file_name = 'healthcare_data_sample.csv'
sampled_df.to_csv(output_file_name, index=False)
print(f"\nSampled data saved to '{output_file_name}'")



# To save the entire DataFrame 'df' to a new CSV file:
output_full_file_name = 'full_healthcare_dataset.csv'
df.to_csv(output_full_file_name, index=False)
print(f"Full DataFrame saved to '{output_full_file_name}'")

