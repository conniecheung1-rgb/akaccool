import numpy as np
import pandas as pd

# Set random seed for reproducibility
np.random.seed(42)

# Parameters for the normal distribution
mean_price = 50      # average price
std_dev = 10         # standard deviation
n_samples = 1000     # number of data points

# Generate normally distributed data
prices = np.random.normal(loc=mean_price, scale=std_dev, size=n_samples)

# Round to 2 decimal places
prices = np.round(prices, 2)

# Put into a DataFrame for easy handling
df = pd.DataFrame(prices, columns=["Price"])

print(df.head(10))  # preview first 10 rows

import matplotlib.pyplot as plt
import seaborn as sns

# Set style for nicer visuals
sns.set(style="whitegrid")

# Plot histogram with density curve
plt.figure(figsize=(8, 5))
sns.histplot(df["Price"], bins=30, kde=True, color="skyblue")

# Add labels and title
plt.xlabel("Price")
plt.ylabel("Frequency")
plt.title("Distribution of Simulated Prices (Normal)")

plt.show()

